<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"

  android:id="@+id/activity_main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  tools:context="ebaeapp.com.ebae.MainActivity"
    android:background="@android:color/background_light">

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/reroll_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:clickable="true"
      android:onClick="onRerollButtonClick"
      android:src="@drawable/white_die_big"
      app:backgroundTint="@android:color/holo_blue_light"
      app:fabSize="normal"
      app:elevation="0dp"
      app:srcCompat="@drawable/white_die_big" />

  <TextView
    android:id="@+id/restaurant_name"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:textSize="35sp"
    android:textAlignment="center"
    android:textColor="@color/mainBlue"/>

  <ImageView
    android:id="@+id/restaurant_image"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_below="@id/restaurant_name"
    android:layout_marginBottom="20dp"
    android:scaleType="fitCenter"/>

  <ImageView
    android:id="@+id/restaurant_rating"
    android:layout_below="@id/restaurant_image"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="40dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@id/restaurant_rating"
    android:gravity="center">
    <Button
      android:text="MAPS"
      android:onClick="onMapsClick"
      android:layout_width="100dp"
      android:layout_height="50dp" />
    <Button
      android:text="Yelp"
      android:onClick="onYelpClick"
      android:layout_width="100dp"
      android:layout_height="50dp" />
    <Button
      android:text="Share"
      android:onClick="onShareClick"
      android:layout_width="100dp"
      android:layout_height="50dp" />

  </LinearLayout>

</RelativeLayout>
